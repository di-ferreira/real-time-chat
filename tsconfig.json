{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2019"
    ],
    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}